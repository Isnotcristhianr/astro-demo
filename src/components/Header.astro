---
import HeaderButton from "./HeaderButton.astro";
import Counter from "./Counter.jsx";
---

<header transition:persist="fade" class="py-8 px-4 mx-auto max-w-xl lg:py-16 lg:px-6">
  <div class="mx-auto text-center mb-8 lg:mb-16">
    <h2 class="text-4xl font-bold text-white">Space X Launches ðŸš€</h2>
    <p class="text-md text-gray-500">A list of all Space X launches.</p>
  </div>

  <nav class="flex flex-row items-center justify-center">
    <HeaderButton class="text-md text-gray-500" href="/">
      <svg
        slot="before"
        x-bind:width="size"
        x-bind:height="size"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        x-bind:stroke-width="stroke"
        stroke-linecap="round"
        stroke-linejoin="round"
        width="24"
        height="24"
        stroke-width="2"
      >
        <path
          d="M4 13a8 8 0 0 1 7 7a6 6 0 0 0 3 -5a9 9 0 0 0 6 -8a3 3 0 0 0 -3 -3a9 9 0 0 0 -8 6a6 6 0 0 0 -5 3"
        ></path>
        <path d="M7 14a6 6 0 0 0 -3 6a6 6 0 0 0 6 -3"></path>
        <path d="M15 9m-1 0a1 1 0 1 0 2 0a1 1 0 1 0 -2 0"></path>
      </svg>
      All Launches</HeaderButton
    >
    <HeaderButton class="text-md text-gray-500" href="/about">
      <svg
        slot="before"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-linecap="round"
        stroke-linejoin="round"
        width="24"
        height="24"
        stroke-width="2"
      >
        <path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0"></path>
        <path d="M12 9h.01"></path>
        <path d="M11 12h1v4h1"></path>
      </svg>
      About</HeaderButton
    >
    <HeaderButton class="text-md text-gray-500" href="/past">
      <svg
        slot="before"
        x-bind:width="size"
        x-bind:height="size"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        x-bind:stroke-width="stroke"
        stroke-linecap="round"
        stroke-linejoin="round"
        width="24"
        height="24"
        stroke-width="2"
      >
        <path d="M12 8l0 4l2 2"></path>
        <path d="M3.05 11a9 9 0 1 1 .5 4m-.5 5v-5h5"></path>
      </svg>
      Past Launches</HeaderButton
    >
  </nav>
  <div class="flex justify-center">
    <Counter client:visible/>
  </div>
</header>
