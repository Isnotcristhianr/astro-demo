---
interface Props {
  id: string;
  name: string;
  img: string;
  success: boolean;
  flight_number: number;
  details: string;
}
const { success, flight_number, name, id, img } = Astro.props as Props;
const successText = success ? "Success" : "Failed";

---

<div>
  <a
  href={`/launch/${id}`}
    class="rounded-lg border shadow-md bg-gray-800 border-gray-700
    hover:scale-105 hover:bg-gray-700 transition-all duration-300 flex flex-col"
  >
    <picture class="flex justify-center p-4">
      <img src={img} alt={`${name} launch ${id}`} />
    </picture>
    <div class="p-4">
      <h2 class="text-2xl font-bold text-white">Launch #{flight_number}</h2>
      <p class="text-gray-400">{name}</p>
      <p
        class:list={[
          "rounded p-2 text-center font-bold",
          success ? "bg-green-500" : "bg-red-500",
          "text-white",
        ]}
      >
        {successText}
      </p>
    </div>
  </a>
</div>
